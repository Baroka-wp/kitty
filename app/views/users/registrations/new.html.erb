<div class="d-flex justify-content-center align-items-center">
  <main class="form-signin" style="user-select: auto;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <h1 class="h3  fw-normal" style="user-select: auto;">Bienvenu sur samurai e-job🤝 </h1>
      <small class="mb-3 text-warning">N'attendez plus un emploi, Creez le votre !</small><br><br>

      <div class="form-floating" style="user-select: auto;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
        <label for="floatingInput" style="user-select: auto;">Email address</label>
      </div>
      <div class="form-floating" style="user-select: auto;">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword" style="user-select: auto;">Password
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </label>
      </div>
      <div class="form-floating" style="user-select: auto;">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword" style="user-select: auto;">Confirme password</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit" style="user-select: auto;">Sign in</button>
    <% end %>
    <%= render "users/shared/links" %>
  </main>
  <div class="liner-scroll-points-container" style="user-select: auto;"></div>
</div>
