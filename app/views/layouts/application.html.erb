<!DOCTYPE html>
<html>
  <%= render 'shared/head' %>
  <body class="container">
    <%= render 'shared/topnav' %>
    <main>
      <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> fade show text-center" role="alert">
          <%= message %>
        </div>
      <% end %>
      <div id="spinner" class="modal" style="display:none;">
        <div class="text-center">
          <div class="spinner-border" role="status" style="margin: 30%;" >
            <span class="sr-only">Loading...</span>
          </div>
        </div>
      </div>
      <%= yield %>
    </main>
    <%= render "shared/footer" %>
  </body>
</html>
