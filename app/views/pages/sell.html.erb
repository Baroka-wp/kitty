<div class="">
  <hr>
    <div class="row">
      <div class="col-md-8">
        <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Product name</th>
              <th scope="col">Price</th>
              <th scope="col">status</th>
            </tr>
          </thead>
          <tbody style="font-size: 12px;">
          <% cache @sells do %>
            <% @sells.each do |sell| %>
              <% cache sell do %>
            <tr>
              <td><%= sell.created_at.strftime("%d %B %Y") %></td>
              <td><%= sell.product_name %></td>
              <td class="badge bg-info"><%= number_to_currency sell.cart_total, unit: "$", separator: ",", format: "%n%u" %></td>
              <td><%= sell.status %></td>
              <td><%= link_to "show", sell %></td>
            </tr>
            <% end %>
            <% end %>
          <% end %>
          </tbody>
        </table>
        </div>
      </div>
      <div class="col-md-4" style="user-select: auto;">
        <div class="position-sticky" style="top: 2rem; user-select: auto;">
          <div class="p-4 mb-3 bg-light rounded" style="user-select: auto;">
            <h6>Votre solde</h6>
            <p class="text-info"> <%=number_to_currency @solde, unit: "$", separator: ",", format: "%n%u" %> </p>
          </div>
          <a href="#" class="btn btn-sm btn-danger"> Faire un retait</a>
        </div>
      </div>
    </div>
</div>
